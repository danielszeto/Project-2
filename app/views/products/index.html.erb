

<% @products.each do |p| %>
<div>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      
      <div class="caption">
           <% p.users.each do |user| %>

    <h1> <%= user.first_name %> is selling </h1><br />

    Description: <%=p.description %> <br />
    Category: <%=p.category %> <br />
    Available:<%=p.available %> <br /><br /><br />
    <%= image_tag p.product_url, :size => '260x260'%>
    <br />

    
    <h5 class='nav-link btn btn-default'><a href="mailto:<%= user.email%>">Email: <%=user.first_name%></a></h5>

    <h5 class='nav-link btn btn-default'><%= link_to "BakR's Profile", user_path(user).downcase %></h5>


    <% end %>
      </div>
    </div>
  </div>
</div>

<%end%>

